# Base Image
FROM openjdk:22-jdk-slim
# Use the official OpenJDK 22 image (slim version for smaller size)

# Arguments (Optional, but useful for customization)
ARG JAR_FILE=target/*.jar

# Working Directory
WORKDIR /app

# Copy the JAR file
COPY ${JAR_FILE} app.jar

# Expose the port your Spring Boot app runs on (typically 8080)
EXPOSE 8080

# Define the entrypoint command to run your application
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
